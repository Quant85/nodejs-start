      <article>
        <h1><%= articolo.titolo %> </h1>
        <p><%= articolo.testo %></p>
      </article>
    <% }); %>
  </main>

  <footer>
    <p>Tutti i diritti sono riservati</p>
  </footer>
</body>

</html>